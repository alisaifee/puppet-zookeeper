<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.zookeeper</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Distributed coordination services.</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "zookeeper::config::executable" %></string>
      <string>start</string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= scope.lookupvar "::boxen_user" %></string>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "zookeeper::config::configdir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "zookeeper::config::logdir" %>/stderr.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "zookeeper::config::logdir" %>/stdout.log</string>

  </dict>
</plist>
